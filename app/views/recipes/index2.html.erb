<h1>Results for: <%= @search_term %></h1>

<% if (@recipes.nil? or @recipes == []) %>
<p> <h2>No recipes found.. Sorry</h2></p>
<% else %>

<table border="1">
 <tr>
 <th>Image</th>
 <th>Name</th>
 <th>Save</th>
 </tr>
 <% @recipes.each do |course| %>
 <tr class=<%= cycle('even', 'odd') %>>
  <td><%= link_to(image_tag(course["img_url"], height: '200', width: '200'), course["f2f_url"])%></td>
  <td><%= link_to(course["title"], course["source_url"]) %> </td>
  <td>
    <% if current_user %>
      <% if course.users.include? current_user %>
        <%= link_to "&#9733;".html_safe, remove_external_favorite_recipe_path(course), method: :delete, class: "fav" %>
      <% else %>
        <%= link_to "&#9733;".html_safe, add_external_favorite_recipe_path(course), method: :post, class: "no-fav" %>
      <% end %>
    <% end %>
  </td>
 </tr>
 <% end %>
</table>
<% end %>
